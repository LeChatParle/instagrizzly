<!--this is the form for commenting. styled by Bootstrap-->
<%= simple_form_for([@pic, @pic.comments.build], html: {class: "form-horizontal"}) do |f| %>

  <p>
    <%= f.input :name, input_html: {class: "form-control mb-3"} %>
  </p>

  <p>
    <%= f.input :body, input_html: {class: "form-control"} %>
  </p>

  <p>
    <%= f.button :submit, class: "btn btn-primary mt-2" %>
  </p>
<% end %>
