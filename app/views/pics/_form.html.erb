<%= simple_form_for(@pic, html: {class: "form-horizontal"}) do |f| %>
  <% if @pic.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@pic.errors.count, "error")  %> stopped this post from saving</h2>
      <ul>
        <% @pic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    <div>
  <% end %>
  <%= f.input :title, input_html: {class: "form-control mb-3"} %>
  <%= f.input :description, input_html: {class: "form-control"} %>
  <%= f.button :submit, class: "btn btn-primary mt-2" %>
<% end %>
